\begin_inset Formula 
\begin{equation}
S_{ij}=\begin{cases}
-\nabla\cdot\mathbf{u}_{i} & \text{if }\nabla\cdot\mathbf{u}_{i}<0\\
0 & \text{otherwise}
\end{cases}
\end{equation}

